{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["./*"],
      "@/backend/*": ["./backend/*"],
      "@/types": ["./types/index.ts"],
      "@/types/*": ["./types/*"]
    }
  },
  "include": ["./**/*", "../types/**/*"],
  "exclude": ["node_modules"]
}
